{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "module": "es2022",
    "target": "es2017",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~*": [ "../*" ],
      "src/*": [ "./*" ],
      "@/*": [ "../node_modules/*" ],
      "app/*": [ "./app/*" ],
      "processes/*": [ "./processes/*" ],
      "pages/*": [ "./pages/*" ],
      "widgets/*": [ "./widgets/*" ],
      "features/*": [ "./features/*" ],
      "entities/*": [ "./entities/*" ],
      "shared/*": [ "./shared/*" ]
    }
  },
    "include": ["src/**/*", "scripts/**/*"]
}
